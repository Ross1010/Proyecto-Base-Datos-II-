Persona/cliente

IdCliente
NombrePersona (Nombre y apellido)
RTNCliente


CREATE TABLE [dbo].[Persona](
	[IdPersona] [int] NOT NULL,
	[Nombre] [varchar](50) NOT NULL,
	[Apellido] [varchar](50) NOT NULL,
	[Sexo] [char](2) NOT NULL,
	[IDE] [varchar](50) NOT NULL,
	[Direccion] [varchar](50) NOT NULL,
	[Telefono] [varchar](50) NOT NULL,
	[Edad] [int] NOT NULL,
 CONSTRAINT [PK_Persona] PRIMARY KEY CLUSTERED 

 CREATE TABLE [dbo].[Cliente](
	[IdCliente] [int] NOT NULL,
	[Nombre] [varchar](50) NOT NULL,
	[RTN] [varchar](50) NOT NULL,
 CONSTRAINT [PK_Cliente] PRIMARY KEY CLUSTERED 


1)
 create table dw_persona
 	idCliente int not null,
 	NombrePersona vaarchar(50) not null,
 	rtnCliente varchar(20)
 constraint pk_idcliente primary key clustered

